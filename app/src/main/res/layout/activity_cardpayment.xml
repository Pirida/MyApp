<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".Cardpayment">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="90dp"
        app:cardMaxElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.311"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/vline1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:background="@color/black_color" />


        <ImageView
            android:id="@+id/debitcardimage"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="65dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_credit_card_image" />

        <TextView
            android:id="@+id/debitcard"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="65dp"
            android:layout_marginRight="130dp"
            android:text="Debit/Credit Card"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/arrow1"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="65dp"
            android:src="@drawable/ic_frontslash" />

        <View
            android:id="@+id/vline2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="110dp"
            android:layout_marginRight="20dp"
            android:background="@color/black_color" />

        <ImageView
            android:id="@+id/netbankdimage"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="125dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_netbank_image" />

        <TextView
            android:id="@+id/netbank"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="125dp"
            android:layout_marginRight="125dp"
            android:text="Net Banking"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/arrow2"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="125dp"
            android:src="@drawable/ic_frontslash" />

        <View
            android:id="@+id/vline4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="170dp"
            android:layout_marginRight="20dp"
            android:background="@color/black_color" />

        <ImageView
            android:id="@+id/upiimage"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="185dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_upi_image" />

        <TextView
            android:id="@+id/upi"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="185dp"
            android:layout_marginRight="125dp"
            android:text="UPI"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/arrow3"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="185dp"
            android:src="@drawable/ic_frontslash" />

        <View
            android:id="@+id/vline5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="230dp"
            android:layout_marginRight="20dp"
            android:background="@color/black_color" />

        <ImageView
            android:id="@+id/moreoptionimage"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="245dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_payment_image" />

        <TextView
            android:id="@+id/morepayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="245dp"
            android:text="More Payment Options"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/arrow4"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="245dp"
            android:src="@drawable/ic_frontslash" />

        <View
            android:id="@+id/viewline2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="290dp"
            android:layout_marginRight="25dp"
            android:background="@color/black_color" />

        <TextView
            android:id="@+id/mailid"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="305dp"
            android:layout_marginRight="105dp"
            android:text=" satheesh.amiga@gmail.com"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/editoption"
            android:layout_width="41dp"
            android:layout_height="25dp"
            android:layout_marginLeft="258dp"
            android:layout_marginTop="318dp"
            android:text=" Edit"
            android:textColor="#3399ff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/addressnumber"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="330dp"
            android:layout_marginRight="105dp"
            android:text=" 9443970271 | Tamilnadu"
            android:textSize="16sp" />


    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bulecolor_button_grad"
        android:text="Pay $ 372.80"
        android:textColor="@color/whitecolor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview" />





</android.support.constraint.ConstraintLayout>
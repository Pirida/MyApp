<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="	#000000"
    tools:context=".Payment">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.311"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="112dp"
            android:layout_marginRight="112dp"
            android:background="#000000"/>

        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_barcodeimage" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="145dp"
            android:layout_marginLeft="115dp"
            android:layout_marginRight="85dp"
            android:text="Please give it to"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="40dp"
            android:text="the cashier to scan the code"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="210dp"
            android:src="@drawable/half_circle_left" />


        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="188dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="0dp"
            android:text=".  .  .  .  .  .  .  .  ."
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="40sp" />


        <ImageView
            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="301dp"
            android:layout_marginStart="301dp"
            android:layout_marginTop="210dp"
            android:src="@drawable/half_circle_right" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="80dp"
            android:text="McDonald's"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Orderfood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="310dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="0dp"
            android:text="Order food:"
            android:textColor="#000000"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/Orderitem2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="335dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="0dp"
            android:text="Big Mac                                                         $8.00"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/Orderitem13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="0dp"
            android:text="McDouble^                                                 $12.99"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/Orderitem4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="385dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="0dp"
            android:text="Southwest Buttermilk...                           $14.00"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/Orderitem5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="0dp"
            android:text="Caramel Macchiato                                    $4.00"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/totalprice"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="440dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="0dp"
            android:text="Total Price: ( paid )"
            android:textColor="#000000"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/pricenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="435dp"
            android:layout_marginLeft="226dp"
            android:layout_marginRight="0dp"
            android:text=" $38.99"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/button"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="490dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/bulecolor_button_grad"
            android:text="Complete"
            android:textSize="18sp" />






    </android.support.v7.widget.CardView>



</android.support.constraint.ConstraintLayout>
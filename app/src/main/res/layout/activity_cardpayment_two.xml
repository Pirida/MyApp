<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".Cardpayment_two">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="1dp"
        app:cardElevation="90dp"
        app:cardMaxElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.311"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/vline2"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/gainsboro_color" />


        <ImageView
            android:id="@+id/arrow1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="26dp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Choose an UPI app"
            android:textColor="@color/black_color"
            android:textSize="18sp" />


        <ImageView
            android:id="@+id/debitcardimage"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_paytmimage" />

        <TextView
            android:id="@+id/debitcard"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="125dp"
            android:text="Paytm"
            android:textSize="18sp" />

        <View
            android:id="@+id/vline1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="135dp"
            android:layout_marginRight="0dp"
            android:background="@color/black_color" />

        <ImageView
            android:id="@+id/phonepeimage"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="155dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_netbank_image" />

        <TextView
            android:id="@+id/netbank"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="155dp"
            android:layout_marginRight="125dp"
            android:text="PhonePe"
            android:textSize="18sp" />

        <View
            android:id="@+id/vline4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="0dp"
            android:background="@color/black_color" />

        <ImageView
            android:id="@+id/amazonimage"

            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="220dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_amazonimage" />

        <TextView
            android:id="@+id/upi"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="220dp"
            android:layout_marginRight="125dp"
            android:text="Amazon Pay"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="270dp"
            android:background="@color/gainsboro_color"
            android:gravity="center|start"
            android:text="    OR"
            android:textColor="@color/black_color"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/payment_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="390dp"
            android:layout_marginRight="10dp"
            android:hint="Enter your Virtual Payment Address (VPA)"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="590dp"
            android:background="@drawable/bulecolor_button_grad"
            android:text="Pay"
            android:textColor="@color/whitecolor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardview" />


    </android.support.v7.widget.CardView>






</android.support.constraint.ConstraintLayout>
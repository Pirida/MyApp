<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:background="@drawable/toplightblue_gradient">

    <ImageView
        android:id="@+id/BackArrowImageView"
        android:layout_width="39dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_backarrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/backarrowimageview" />

    <TextView
        android:id="@+id/StudentDashboardTxtView"
        android:layout_width="113dp"
        android:layout_height="40sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="@string/profile"
        android:textColor="@color/white_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toEndOf="@+id/BackArrowImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ProfileView"
        android:layout_width="142dp"
        android:layout_height="130dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_ovel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StudentDashboardTxtView" />

    <ImageView
        android:id="@+id/ProfileImageView"
        android:layout_width="103dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toBottomOf="@+id/ProfileView"
        app:layout_constraintEnd_toEndOf="@+id/ProfileView"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="@+id/ProfileView"
        app:layout_constraintTop_toTopOf="@+id/ProfileView"
        app:layout_constraintVertical_bias="0.391"
        app:srcCompat="@drawable/ic_girl"
        android:contentDescription="@string/profileimageview" />


    <TextView
        android:id="@+id/ProfileNameTxtView"
        android:layout_width="306dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="@string/raje_selvam"
        android:textColor="@color/white_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfileView" />

    <TextView
        android:id="@+id/ProfileFatherNameTxtView"
        android:layout_width="306dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="@string/fathername_selvam_s"
        android:textColor="@color/white_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfileNameTxtView" />

    <android.support.v7.widget.CardView
        android:id="@+id/PhoneNumberCardView"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:layout_margin="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfileFatherNameTxtView">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/PhNumberTxtView"
                android:layout_width="225dp"
                android:layout_height="30sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:gravity="center|start"
                android:text="@string/_91_90562_45089"
                android:textColor="@color/black_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/PhoneView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/PhoneNumberTxtView"
                android:layout_width="225dp"
                android:layout_height="30dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:text="@string/phone_number"
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toEndOf="@+id/PhoneView"
                app:layout_constraintTop_toBottomOf="@+id/PhNumberTxtView" />

            <View
                android:id="@+id/PhoneView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ic_orange_ovel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2" />

            <ImageView
                android:id="@+id/PhoneImageView"
                android:layout_width="40sp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/PhoneView"
                app:layout_constraintEnd_toEndOf="@+id/PhoneView"
                app:layout_constraintStart_toStartOf="@+id/PhoneView"
                app:layout_constraintTop_toTopOf="@+id/PhoneView"
                app:srcCompat="@drawable/ic_call"
                android:contentDescription="@string/phoneimageview" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/AdmissionCardView"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PhoneNumberCardView">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/AdmissionView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_lightorangeovel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.111" />

            <ImageView
                android:id="@+id/AdmissionImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/AdmissionView"
                app:layout_constraintEnd_toEndOf="@+id/AdmissionView"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="@+id/AdmissionView"
                app:layout_constraintTop_toTopOf="@+id/AdmissionView"
                app:layout_constraintVertical_bias="0.48"
                app:srcCompat="@drawable/ic_admission"
                android:contentDescription="@string/admissionimageview" />

            <TextView
                android:id="@+id/AdmissionNumberTxtView"
                android:layout_width="129dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="@string/wsb_0015ajhg2"
                android:textColor="@color/black_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toEndOf="@+id/AdmissionView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/AdmissionTxtView"
                android:layout_width="176dp"
                android:layout_height="27dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/admission_number"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.209"
                app:layout_constraintStart_toEndOf="@+id/AdmissionView"
                app:layout_constraintTop_toBottomOf="@+id/AdmissionNumberTxtView" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/SectionCardView"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AdmissionCardView">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/SectionView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ic_yellowcolor_ovel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.722" />

            <ImageView
                android:id="@+id/SectionImageView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:layout_constraintBottom_toBottomOf="@+id/SectionView"
                app:layout_constraintEnd_toEndOf="@+id/SectionView"
                app:layout_constraintHorizontal_bias="0.514"
                app:layout_constraintStart_toStartOf="@+id/SectionView"
                app:layout_constraintTop_toTopOf="@+id/SectionView"
                app:layout_constraintVertical_bias="0.466"
                app:srcCompat="@drawable/ic_section"
                android:contentDescription="@string/sectionimageview" />

            <TextView
                android:id="@+id/SectionTxtView"
                android:layout_width="145dp"
                android:layout_height="30sp"
                android:layout_marginTop="16sp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="@string/a_first_class_top"
                android:textColor="@color/black_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.075"
                app:layout_constraintStart_toEndOf="@+id/SectionView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/SectionNameTxtView"
                android:layout_width="134dp"
                android:layout_height="30sp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:text="@string/section"
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.127"
                app:layout_constraintStart_toEndOf="@+id/SectionView"
                app:layout_constraintTop_toBottomOf="@+id/SectionTxtView" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>